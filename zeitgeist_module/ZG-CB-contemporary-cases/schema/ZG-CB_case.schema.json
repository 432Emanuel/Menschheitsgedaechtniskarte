{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ZG-CB_case.schema.json",
  "title": "ZG-CB Contemporary Case",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "case_id",
    "country",
    "culture_region",
    "timeframe",
    "context_type",
    "source",
    "linked_modules",
    "description",
    "fracture_points",
    "reaction_patterns",
    "structure_themes",
    "status",
    "created_at"
  ],
  "properties": {
    "case_id": {
      "type": "string",
      "pattern": "^ZG-CB-[A-Z]{2,3}-\\d{4}-\\d{2}$"
    },
    "country": { "type": "string", "minLength": 2 },
    "culture_region": { "type": "string", "minLength": 2 },

    "timeframe": {
      "type": "object",
      "additionalProperties": false,
      "required": ["from", "to"],
      "properties": {
        "from": { "type": "string", "minLength": 4 },
        "to": { "type": "string", "minLength": 4 },
        "note": { "type": "string" }
      }
    },

    "context_type": {
      "type": "string",
      "enum": ["interview", "everyday_observation", "media_event", "personal_account", "institutional_event", "other"]
    },

    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["medium", "title_or_label"],
      "properties": {
        "medium": { "type": "string" },
        "title_or_label": { "type": "string" },
        "creator_or_channel": { "type": "string" },
        "published_at": { "type": "string" },
        "url": { "type": "string" },
        "local_file": { "type": "string" },
        "notes": { "type": "string" }
      }
    },

    "linked_modules": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 3 }
    },

    "description": {
      "type": "object",
      "additionalProperties": false,
      "required": ["descriptive"],
      "properties": {
        "descriptive": { "type": "string", "minLength": 20 },
        "keywords": { "type": "array", "items": { "type": "string" } }
      }
    },

    "fracture_points": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 5 }
    },

    "reaction_patterns": {
      "type": "object",
      "additionalProperties": false,
      "required": ["individual", "social", "ideological_or_spiritual"],
      "properties": {
        "individual": { "type": "array", "items": { "type": "string" } },
        "social": { "type": "array", "items": { "type": "string" } },
        "ideological_or_spiritual": { "type": "array", "items": { "type": "string" } }
      }
    },

    "structure_themes": {
      "type": "object",
      "additionalProperties": false,
      "required": ["order_powerlessness", "bonding_unbonding", "meaning_substitute", "memory_forgetting"],
      "properties": {
        "order_powerlessness": { "type": "array", "items": { "type": "string" } },
        "bonding_unbonding": { "type": "array", "items": { "type": "string" } },
        "meaning_substitute": { "type": "array", "items": { "type": "string" } },
        "memory_forgetting": { "type": "array", "items": { "type": "string" } }
      }
    },

    "anthropological_constants": {
      "type": "object",
      "additionalProperties": false,
      "description": "OPTIONAL: Verknüpfungen zu anthropologischen Konstanten - für zukünftige Forschung offen",
      "properties": {
        "family": { "type": "array", "items": { "type": "string" }, "description": "Familienbezogene Muster" },
        "ritual": { "type": "array", "items": { "type": "string" }, "description": "Rituale und Übergänge" },
        "faith": { "type": "array", "items": { "type": "string" }, "description": "Glaube und Transzendenz" },
        "transition_initiation": { "type": "array", "items": { "type": "string" }, "description": "Initiation und Übergänge" },
        "generation": { "type": "array", "items": { "type": "string" }, "description": "Generationenbeziehungen" }
      }
    },

    "perspective_openness": {
      "type": "object",
      "additionalProperties": false,
      "description": "OPTIONAL: Explizite Offenheit für alternative Perspektiven - zentral für perspektivoffene Dokumentation",
      "properties": {
        "alternative_interpretations": { "type": "array", "items": { "type": "string" }, "description": "Mögliche alternative Deutungen des Falls" },
        "culture_specific_notes": { "type": "array", "items": { "type": "string" }, "description": "Kulturspezifische Kontexte für andere Länder" }
      }
    },

    "status": {
      "type": "string",
      "enum": ["raw", "reflected", "comparable", "archived"],
      "description": "Verarbeitungsstatus: raw (Rohmaterial), reflected (reflektiert), comparable (vergleichbar), archived (archiviert)"
    },

    "created_at": { "type": "string", "description": "Erstellungsdatum im Format YYYY-MM-DD" },
    "created_by": { "type": "string", "description": "OPTIONAL: Ersteller (für menschliche Mitwirkende reserviert)" }
  }
}
