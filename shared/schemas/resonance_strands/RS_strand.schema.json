{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Resonance Strand",
  "type": "object",
  "required": [
    "strand_id",
    "strand_type",
    "carrier",
    "motifs",
    "couplings",
    "evidence"
  ],
  "properties": {
    "strand_id": {
      "type": "string",
      "description": "Eindeutige Kennung des Strands im Format RS-{TYPE}-{CARRIER}-{NUM}"
    },
    "strand_type": {
      "type": "string",
      "description": "Art des Resonanzstrands",
      "enum": ["IRS", "FRS", "OeRS"],
      "enumNames": ["Individueller Resonanzstrang", "Familiärer Resonanzstrang", "Öffentlicher Resonanzstrang"]
    },
    "carrier": {
      "type": "object",
      "description": "Träger des Resonanzstrands",
      "properties": {
        "primary_carrier_id": {
          "type": "string",
          "description": "Primärer Träger (z.B. Individuum-ID)"
        },
        "carrier_type": {
          "type": "string",
          "enum": ["individual", "family", "community", "institution", "place"],
          "description": "Art des Trägers"
        },
        "additional_carriers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Zusätzliche beteiligte Träger"
        }
      },
      "required": ["primary_carrier_id", "carrier_type"]
    },
    "motifs": {
      "type": "array",
      "description": "Wiederkehrende Muster und Themen",
      "items": {
        "type": "object",
        "properties": {
          "motif_id": {
            "type": "string",
            "description": "Kennung des Motivs"
          },
          "motif_name": {
            "type": "string",
            "description": "Name des Motivs"
          },
          "description": {
            "type": "string",
            "description": "Beschreibung des Motivs"
          },
          "frequency": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Häufigkeit des Auftretens (0-1)"
          },
          "intensity": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Intensität der Resonanz (0-1)"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Konkrete Beispiele für das Motiv"
          }
        },
        "required": ["motif_id", "motif_name", "description"]
      }
    },
    "couplings": {
      "type": "array",
      "description": "Verbindungen zu anderen Elementen der Menschheitsgedächtniskarte",
      "items": {
        "type": "object",
        "properties": {
          "coupling_id": {
            "type": "string",
            "description": "Kennung der Kopplung"
          },
          "target_id": {
            "type": "string",
            "description": "ID des verknüpften Elements (Node, Edge, etc.)"
          },
          "target_type": {
            "type": "string",
            "enum": ["node", "edge", "marker", "lens", "pattern", "module"],
            "description": "Art des verknüpften Elements"
          },
          "coupling_mode": {
            "type": "string",
            "description": "Art der Verknüpfung",
            "enum": ["amplifies", "dampens", "filters", "translates", "gates", "echoes", "conflicts_with"]
          },
          "strength": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Stärke der Kopplung (0-1)"
          },
          "description": {
            "type": "string",
            "description": "Beschreibung der Verknüpfung"
          }
        },
        "required": ["target_id", "target_type", "coupling_mode", "strength"]
      }
    },
    "evidence": {
      "type": "array",
      "description": "Belege und Quellen für den Resonanzstrang",
      "items": {
        "type": "object",
        "properties": {
          "evidence_id": {
            "type": "string",
            "description": "Kennung des Belegs"
          },
          "evidence_type": {
            "type": "string",
            "enum": ["raw_observation", "reported", "documented", "verified"],
            "description": "Qualität des Belegs"
          },
          "source": {
            "type": "string",
            "description": "Quelle des Belegs"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Zeitstempel der Beobachtung"
          },
          "description": {
            "type": "string",
            "description": "Beschreibung des Belegs"
          }
        },
        "required": ["evidence_type", "description"]
      }
    },
    "time_window": {
      "type": "object",
      "description": "Zeitlicher Kontext des Strands",
      "properties": {
        "start_year": {
          "type": ["integer", "null"],
          "description": "Startjahr"
        },
        "end_year": {
          "type": ["integer", "null"],
          "description": "Endjahr"
        },
        "era": {
          "type": ["string", "null"],
          "enum": ["BCE", "CE", "BP", "unknown"],
          "description": "Zeitrechnungssystem"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date"
        },
        "updated": {
          "type": "string",
          "format": "date"
        },
        "version": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "active", "archived"]
        },
        "notes": {
          "type": "string",
          "description": "Zusätzliche Anmerkungen"
        }
      }
    }
  }
}