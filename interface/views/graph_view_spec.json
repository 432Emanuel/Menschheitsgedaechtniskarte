{
  "view_spec": {
    "id": "GRAPH-001",
    "name": "GraphView",
    "anthropological_level": "geist",
    "design_principle_ref": "DP-001-anthropologische-erkenntnisarchitektur.json",
    "core_intent": "Strukturelle Vernetzung von Wissen: Beziehungen, Claims und Hypothesen als navigierbares Netzwerk.",
    "principles": [
      "Beziehungen als Kanten im Netzwerk",
      "Claims und Hypothesen als Strukturelemente",
      "Navigation als Weg durch Zusammenhänge",
      "Kausalität und Konvergenz visualisieren"
    ],
    "epistemic_layer_representation": {
      "L1": {
        "name": "Gesicherte Daten",
        "node_style": {
          "color": "#4682B4",
          "border_width": "3px",
          "shape": "circle",
          "glow": "none"
        },
        "edge_style": {
          "solid": true,
          "width": "2px",
          "color": "#4682B4",
          "label_visible": true
        }
      },
      "L2": {
        "name": "Überlieferte Erinnerung",
        "node_style": {
          "color": "#FFB347",
          "border_width": "2px",
          "shape": "diamond",
          "glow": "subtle"
        },
        "edge_style": {
          "solid": true,
          "width": "1.5px",
          "color": "#FFB347",
          "label_visible": true
        }
      },
      "L3": {
        "name": "Brüche & Lücken",
        "node_style": {
          "color": "#9370DB",
          "border_width": "1px",
          "shape": "hexagon",
          "glow": "pulsing"
        },
        "edge_style": {
          "solid": false,
          "dashed": true,
          "width": "1px",
          "color": "#9370DB",
          "label_visible": true
        }
      },
      "L4": {
        "name": "Spiegelräume",
        "node_style": {
          "color": "#50C878",
          "border_width": "1px",
          "shape": "star",
          "glow": "soft"
        },
        "edge_style": {
          "solid": false,
          "dotted": true,
          "width": "0.5px",
          "color": "#50C878",
          "label_visible": false
        }
      }
    },
    "edge_types": {
      "supports": {
        "style": "solid_line",
        "arrow": "forward",
        "color": "inherit_from_source",
        "strength_indicator": "line_thickness"
      },
      "contradicts": {
        "style": "solid_line",
        "arrow": "double",
        "color": "#DC143C",
        "strength_indicator": "line_thickness",
        "conflict_visualization": true
      },
      "informs": {
        "style": "dashed_line",
        "arrow": "forward",
        "color": "inherit_from_source",
        "strength_indicator": "line_opacity"
      },
      "inspired_by": {
        "style": "dotted_line",
        "arrow": "backward",
        "color": "inherit_from_source",
        "strength_indicator": "line_spacing"
      },
      "analogous_to": {
        "style": "solid_line",
        "arrow": "none",
        "color": "inherit_from_source",
        "strength_indicator": "line_color_saturation"
      }
    },
    "claim_visualization": {
      "principle": "Claims werden als Attribute an Kanten visualisiert",
      "representation": {
        "claim_type": {
          "data": "Solid line, high saturation",
          "tradition": "Dashed line, medium saturation",
          "hypothesis": "Dotted line, low saturation",
          "symbol": "Gradient line, variable saturation"
        },
        "confidence": {
          "visual_as": "Line thickness and opacity",
          "scale": "0.0-1.0",
          "thresholds": {
            "high": "2px, opacity 1.0",
            "medium": "1px, opacity 0.7",
            "low": "0.5px, opacity 0.4"
          }
        }
      }
    },
    "layout_strategies": {
      "force_directed": {
        "use_case": "Gesamtnetzwerk, Cluster-Erkennung",
        "parameters": {
          "repulsion": "medium",
          "attraction": "based_on_edge_type",
          "gravity": "center"
        }
      },
      "hierarchical": {
        "use_case": "Kausale Ketten, Zeitverläufe",
        "parameters": {
          "direction": "top_to_bottom",
          "layer_gap": "proportional_to_time_distance"
        }
      },
      "circular": {
        "use_case": "Thematische Cluster, Zyklische Muster",
        "parameters": {
          "radius": "dynamic",
          "cluster_arrangement": "by_theme"
        }
      },
      "geospatial": {
        "use_case": "Geographische Cluster mit Netzwerk-Overlay",
        "parameters": {
          "base": "map_coordinates",
          "edge_overlay": "above_map"
        }
      }
    },
    "interaction_patterns": {
      "hover": {
        "node": "Zeigt Titel, Epistemischer Layer, Haupt-Claims",
        "edge": "Zeigt Relationstyp, Claim-Statement, Confidence",
        "highlight_path": "Markiert kürzesten Pfad zu ausgewähltem Node"
      },
      "click": {
        "single_node": "Öffnet Detail-Panel mit allen Claims",
        "single_edge": "Öffnet Claims-Dialog für diese Beziehung",
        "double_node": "Zentriert auf Node und zeigt direkte Nachbarn",
        "drag": "Verschiebt Node und aktualisiert Layout"
      },
      "zoom": {
        "behavior": "Smothes Zoom mit dynamischem Detail-Level",
        "detail_levels": {
          "overview": "Nur Cluster-Hauptknoten",
          "cluster": "Cluster + direkte Verbindungen",
          "detail": "Alle Nodes und Kanten mit Labels"
        }
      },
      "filter": {
        "layer_filter": "Ein/Ausblendung von L1-L4",
        "relation_type_filter": "Filter nach supports/contradicts/etc.",
        "confidence_filter": "Minimum-Confidence für Kanten",
        "theme_filter": "Filter nach Tags/Themen"
      },
      "search": {
        "node_search": "Suche nach Titel, ID, Tags",
        "path_search": "Kürzester Pfad zwischen zwei Nodes",
        "cluster_search": "Suche nach Clustern mit bestimmten Eigenschaften"
      }
    },
    "confidence_indicators": {
      "node_confidence": {
        "visual_as": "Border thickness and saturation",
        "legend": {
          "high": "Thick border, full color",
          "medium": "Medium border, 80% color",
          "low": "Thin border, 60% color"
        }
      },
      "edge_confidence": {
        "visual_as": "Line thickness and opacity",
        "legend": {
          "high": "Thick line, full opacity",
          "medium": "Medium line, 70% opacity",
          "low": "Thin line, 40% opacity"
        }
      },
      "uncertainty_zones": {
        "visual_as": "Dotted border, pulsing glow",
        "meaning": "Regionen mit niedriger Konfidenz oder widersprüchlichen Claims"
      }
    },
    "transitions": {
      "to_map_view": {
        "trigger": "Button oder Geospatial-Layout-Modus",
        "context": "Geokodierte Nodes werden auf Karte übertragen",
        "visual_hint": "Nodes animieren zu geografischen Positionen"
      },
      "to_resonance_panel": {
        "trigger": "Button oder Rechtsklick auf Node",
        "context": "Ausgewählter Node als Perspektiven-Objekt",
        "visual_hint": "Network blurs, Resonance-Panel slide-in"
      }
    },
    "special_features": {
      "convergence_detection": {
        "description": "Automatische Erkennung von Konvergenzpunkten",
        "visualization": "Nodes mit vielen eingehenden supports-Kanten werden hervorgehoben"
      },
      "conflict_detection": {
        "description": "Automatische Erkennung von Widersprüchen",
        "visualization": "Contradicts-Kanten werden rot markiert, Konflikt-Cluster werden gruppiert"
      },
      "path_exploration": {
        "description": "Interaktive Pfad-Exploration",
        "visualization": "Benutzer kann Pfade interaktiv aufbauen und bewerten"
      }
    },
    "loop_status": {
      "loop_ref": "DP-003-thorus-operating-loop.json",
      "current_step": {
        "active_steps": [3, 4],
        "step_mapping": {
          "step_3": {
            "label": "Ich lerne",
            "function": "Fehlererkennung / Spannung / Hypothesen",
            "signals": ["Konflikt erkannt", "Frage erzeugt", "Anomalie markiert"]
          },
          "step_4": {
            "label": "Ich verstehe",
            "function": "Integration / Modellbildung / Kohärenz",
            "signals": ["Lens angewendet", "Crosslinks erzeugt", "Sinnknoten stabilisiert"]
          }
        }
      },
      "idle_state": {
        "name": "Ich bin Ich",
        "display": "Optionaler Standbild/Reset-Modus",
        "note": "Bewusster Identitäts-Reset / Kohärenz-Standbild (separat vom Loop)"
      },
      "ui_indication": {
        "status_display": "Aktuelles Step-Label im Interface anzeigen (z.B. 'Ich lerne' oder 'Ich verstehe')",
        "visual_indicator": "Subtiler Indikator für aktive Loop-Phase (Spannung oder Integration)",
        "idle_option": "Optionale Toggle-Funktion für Shutdown/Ruhemodus"
      },
      "transition_hint": {
        "to_resonance_panel": "Hinweis für Übergang zu Step 4-5 (Kohärenz + Wirkung) im ResonancePanel",
        "visual_cue": "Pulsierendes Element oder Farbübergang zu Kohärenz-Phase"
      }
    },
    "metadata": {
      "language": "de",
      "version": "1.0.0",
      "created_for": "Menschheitsgedächtniskarte",
      "integration_level": "interface_spec",
      "dependencies": [
        "Konzept_Struktur.json (epistemic_layers)",
        "knowledge/schema/node_schema_v2.json (links, claims)",
        "DP-003-thorus-operating-loop.json"
      ]
    }
  }
}
