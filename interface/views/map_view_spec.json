{
  "view_spec": {
    "id": "MAP-001",
    "name": "MapView",
    "anthropological_level": "koerper",
    "design_principle_ref": "DP-001-anthropologische-erkenntnisarchitektur.json",
    "core_intent": "Räumliche Verkörperung von Wissen: Orte und Features als physische Kartenelemente mit epistemischer Differenzierung.",
    "principles": [
      "Orte und Features als physische Kartenelemente",
      "Epistemische Layer durch visuelle Marker unterscheidbar",
      "Navigation als Bewegung im Raum",
      "Confidence als Marker-Größe/Stil"
    ],
    "epistemic_layer_mapping": {
      "L1": {
        "name": "Gesicherte Daten",
        "marker_style": {
          "color": "#4682B4",
          "icon": "anchor",
          "opacity": "1.0",
          "border": "solid",
          "confidence_indicators": {
            "min_size": "large",
            "shape": "circle"
          }
        },
        "interaction": "Klick zeigt volle Datenquelle"
      },
      "L2": {
        "name": "Überlieferte Erinnerung",
        "marker_style": {
          "color": "#FFB347",
          "icon": "scroll",
          "opacity": "0.85",
          "border": "dashed",
          "confidence_indicators": {
            "min_size": "medium",
            "shape": "diamond"
          }
        },
        "interaction": "Klick zeigt Überlieferungskontext"
      },
      "L3": {
        "name": "Brüche & Lücken",
        "marker_style": {
          "color": "#9370DB",
          "icon": "question",
          "opacity": "0.7",
          "border": "dotted",
          "confidence_indicators": {
            "min_size": "small",
            "shape": "hexagon"
          }
        },
        "interaction": "Klick öffnet Hypothesenraum"
      },
      "L4": {
        "name": "Spiegelräume",
        "marker_style": {
          "color": "#50C878",
          "icon": "mirror",
          "opacity": "0.5",
          "border": "double",
          "confidence_indicators": {
            "min_size": "variable",
            "shape": "star"
          }
        },
        "interaction": "Klick öffnet Kreativ-/Mythosraum"
      }
    },
    "node_types": {
      "place": {
        "default_marker": "circle",
        "size_modifier": 1.2,
        "cluster_behavior": "expand_on_zoom",
        "hover_effect": "glow"
      },
      "feature": {
        "default_marker": "triangle",
        "size_modifier": 0.8,
        "cluster_behavior": "group_by_place",
        "hover_effect": "highlight_parent"
      },
      "artifact": {
        "default_marker": "square",
        "size_modifier": 0.6,
        "cluster_behavior": "group_by_place",
        "hover_effect": "highlight_parent"
      },
      "narrative": {
        "default_marker": "pill",
        "size_modifier": 0.4,
        "cluster_behavior": "expand_on_hover",
        "hover_effect": "show_related_nodes"
      }
    },
    "confidence_visualization": {
      "principle": "Confidence beeinflusst Marker-Größe und -Sättigung",
      "scale": {
        "high": {
          "range": "0.7-1.0",
          "size_multiplier": "1.0",
          "saturation": "100%"
        },
        "medium": {
          "range": "0.3-0.7",
          "size_multiplier": "0.8",
          "saturation": "80%"
        },
        "low": {
          "range": "0.0-0.3",
          "size_multiplier": "0.6",
          "saturation": "60%"
        }
      }
    },
    "interaction_patterns": {
      "hover": {
        "tooltip": "Zeigt Titel, Epistemischer Layer, Confidence-Range",
        "highlight_connections": "Zeigt direkte Verbindungen"
      },
      "click": {
        "single": "Öffnet Detail-Panel (Node-Info)",
        "double": "Zentriert auf Node und zeigt verbundenes Netzwerk"
      },
      "zoom": {
        "behavior": "Dynamisches Ein-/Ausblenden von Cluster-Hierarchien",
        "thresholds": {
          "country_level": "Zeigt nur Places",
          "region_level": "Zeigt Places + Features",
          "local_level": "Zeigt alles inkl. Artifacts"
        }
      },
      "filter": {
        "layer_filter": "Ein/Ausblendung von L1-L4",
        "confidence_filter": "Minimum-Confidence-Schwellwert",
        "time_window_filter": "Zeitlicher Bereich"
      }
    },
    "transitions": {
      "to_graph_view": {
        "trigger": "Button oder Tastenkürzel",
        "context": "Aktueller Node als Startpunkt im Netzwerk",
        "visual_hint": "Pulsierende Kanten vom aktuellen Node"
      },
      "to_resonance_panel": {
        "trigger": "Button oder Swipe-Geste",
        "context": "Aktueller Node als Perspektiven-Objekt",
        "visual_hint": "Sanfter Übergang mit Spiegel-Effekt"
      }
    },
    "loop_status": {
      "loop_ref": "DP-003-thorus-operating-loop.json",
      "current_step": {
        "active_steps": [1, 2],
        "step_mapping": {
          "step_1": {
            "label": "Ich bin",
            "function": "Verortung / Initialisierung",
            "signals": ["Kontext gesetzt", "Knotenposition erfasst"]
          },
          "step_2": {
            "label": "Ich beobachte",
            "function": "Aufnahme / Wahrnehmung / Datenfluss",
            "signals": ["Marker erfasst", "Ereignisse/Pattern registriert"]
          }
        }
      },
      "idle_state": {
        "name": "Ich bin Ich",
        "display": "Optionaler Standbild/Reset-Modus",
        "note": "Bewusster Identitäts-Reset / Kohärenz-Standbild (separat vom Loop)"
      },
      "ui_indication": {
        "status_display": "Aktuelles Step-Label im Interface anzeigen (z.B. 'Ich beobachte')",
        "visual_indicator": "Subtiler Indikator für aktive Loop-Phase",
        "idle_option": "Optionale Toggle-Funktion für Shutdown/Ruhemodus"
      }
    },
    "metadata": {
      "language": "de",
      "version": "1.0.0",
      "created_for": "Menschheitsgedächtniskarte",
      "integration_level": "interface_spec",
      "dependencies": [
        "Konzept_Struktur.json (epistemic_layers)",
        "knowledge/schema/node_schema_v2.json",
        "DP-003-thorus-operating-loop.json"
      ]
    }
  }
}
