{
  "schema_name": "PDSA_Time_Block_Schema",
  "version": "1.0.0",
  "framework": "MGK_METHODICAL_FRAMEWORK_v1",
  "description": "Schema for analyzing pre-disruptive tension periods with strict four-level separation",
  
  "structure": {
    "block_metadata": {
      "period": "string (YYYY-YYYY)",
      "context": "string (brief historical context)"
    },
    
    "data_level": {
      "description": "Verifiable facts, documented events, statistics - NO INTERPRETATION",
      "discourse_density": {
        "primary_sources": [
          {
            "type": "string (book/article/document type)",
            "source": "string (specific reference)",
            "quantification": "string (only if verifiable) OR string (qualitative: 'high/medium/low' with justification)",
            "confidence": "string (high/medium/low)"
          }
        ]
      },
      "technological_velocity": {
        "key_innovations": ["string (specific technologies)"],
        "metrics": {
          "adoption_rate": "string (if verifiable) OR 'no reliable data'",
          "infrastructure_changes": "string (documented changes)"
        }
      },
      "economic_instability": {
        "market_events": [
          {
            "event": "string (documented event)",
            "impact": "string (documented consequences)",
            "source": "string (official/statistical source)"
          }
        ],
        "volatility_indicators": "string (if verifiable) OR 'no reliable data'"
      },
      "polarization": {
        "documented_incidents": ["string (specific events)"],
        "political_fragmentation": "string (qualitative assessment with justification)",
        "social_cleavages": "string (qualitative assessment with justification)"
      },
      "symbolic_overproduction": {
        "cultural_productions": ["string (specific works/genres/movements)"],
        "new_movements": ["string (documented movements)"],
        "diversity_indicator": "string (qualitative: 'high/medium/low' with justification)"
      }
    },
    
    "discourse_level": {
      "description": "Documented public narratives - NO PRIVATE INTERPRETATIONS",
      "dominant_narratives": [
        {
          "narrative": "string (specific published narrative)",
          "media_presence": "string (documented in: newspapers, books, TV, etc.)",
          "timeframe": "string (when documented)"
        }
      ],
      "crisis_discourses": [
        {
          "discourse": "string (specific crisis theme)",
          "public_presence": "string (documented in media/politics)",
          "prominence": "string (high/medium/low with justification)"
        }
      ],
      "end_time_narratives": [
        {
          "theme": "string (millennial/apocalyptic themes)",
          "visibility": "string (documented in: media, literature, culture)",
          "intensity": "string (qualitative with justification)"
        }
      ]
    },
    
    "structure_level": {
      "description": "Aggregate assessment - based on data and discourse levels",
      "tension_matrix": {
        "discourse_density": "string (low/medium/high with data_level reference)",
        "technological_velocity": "string (low/medium/high with data_level reference)",
        "economic_instability": "string (low/medium/high with data_level reference)",
        "polarization": "string (low/medium/high with data_level reference)",
        "symbolic_overproduction": "string (low/medium/high with data_level reference)"
      },
      "aggregate_tension": "string (low/medium/high with justification)",
      "confidence_assessment": "string (assessment of data quality and completeness)",
      "data_gaps": ["string (missing data categories)"]
    },
    
    "interpretation_level": {
      "description": "EXPLICITLY SPECULATIVE - Always marked as hypotheses",
      "hypotheses": [
        {
          "id": "string (HYP-YYYY-XXX)",
          "claim": "string (specific pattern observation)",
          "confidence": "string (very_low/low/medium)",
          "status": "string (speculative/pattern_hypothesis/correlation_only)",
          "data_basis": ["string (references to data_level/structure_level)"],
          "caveats": ["string (explicit limitations)"]
        }
      ],
      "warnings": [
        "string (explicit warnings about causality vs correlation)",
        "string (limitations of data basis)",
        "string (no teleological interpretation)"
      ],
      "uncertainty_markers": {
        "data_completeness": "string (partial/limited/good)",
        "cross_cultural_validity": "string (unknown/limited/untested)",
        "temporal_specificity": "string (specific to this period only)"
      }
    },
    
    "sources": {
      "description": "ALL references explicitly cited",
      "primary_data": [
        {
          "id": "string (SRC-XXX)",
          "type": "string (official_statistic/historical_archive/verified_data)",
          "reference": "string (specific citation)",
          "accessed": "string (if applicable)"
        }
      ],
      "secondary_literature": [
        {
          "id": "string (LIT-XXX)",
          "type": "string (academic_book/historical_analysis/scholarly_article)",
          "reference": "string (full citation)",
          "relevance": "string (which part of analysis it supports)"
        }
      ],
      "media_sources": [
        {
          "id": "string (MED-XXX)",
          "type": "string (newspaper/TV/broadcast/digital)",
          "reference": "string (specific source and timeframe)",
          "usage": "string (discourse_level examples)"
        }
      ]
    }
  },
  
  "mgk_compliance": {
    "principle_1_reality_over_narrative": {
      "implemented": "data_level contains only verifiable facts",
      "validation": "each data point must have source reference"
    },
    "principle_2_metaphors_as_tools": {
      "implemented": "all metaphorical language confined to interpretation_level",
      "validation": "structure_level uses only descriptive categories"
    },
    "principle_3_no_teleology": {
      "implemented": "no 'had to happen' language",
      "validation": "hypotheses marked as speculative patterns only"
    },
    "principle_4_structure_over_blame": {
      "implemented": "focus on system indicators, not actor psychology",
      "validation": "polarization measures structural, not moral"
    },
    "principle_5_level_separation": {
      "implemented": "four distinct JSON sections",
      "validation": "no mixing of data/dicourse/structure/interpretation"
    },
    "principle_6_uncertainty_marked": {
      "implemented": "hypotheses have confidence levels",
      "validation": "warnings explicitly stated"
    }
  },
  
  "quality_checks": {
    "source_policy": "strict - no simulated data, no estimates without sources",
    "fallback_allowed": "qualitative assessment ('low/medium/high') when quantitative data unavailable",
    "causality_forbidden": "correlation â‰  causation explicitly stated",
    "completeness": "data_gaps must be listed in structure_level"
  }
}