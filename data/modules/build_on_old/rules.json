{
  "rules": [
    {
      "id": "BOL-RULE-001",
      "name": "Legacy Node to Standard Node",
      "description": "Transformationsregel für Legacy-Entity-JSONs zu Standard-Node-Format",
      "source_schema": "data/schema/node_schema.json",
      "target_schema": "standard_node_v1",
      "transformation": {
        "type": "field_mapping",
        "mappings": {
          "id": "id",
          "name": "name",
          "description": "description",
          "epistemic_layer": "metadata.epistemic_layer",
          "resonance_layer": "metadata.resonance_layer",
          "links": "connections",
          "confidence": "metadata.confidence"
        },
        "defaults": {
          "confidence": 0.7,
          "epistemic_layer": "L2",
          "resonance_layer": "R0"
        }
      },
      "applicable_to": [
        "modules/imperium/entities/*",
        "modules/mythos_und_verwaltung/narratives/*",
        "knowledge/places/*"
      ],
      "metadata": {
        "created": "2026-01-22",
        "status": "active",
        "version": "0.1.0"
      }
    },
    {
      "id": "BOL-RULE-002",
      "name": "Pattern to Lens",
      "description": "Transformationsregel zum Umwandeln von Patterns zu analytischen Lenses",
      "source_schema": "modules/mythos_und_verwaltung/patterns/*",
      "target_schema": "data/schema/node_schema.json",
      "transformation": {
        "type": "extract_and_transform",
        "extraction": {
          "id": "id",
          "name": "name",
          "description": "description"
        },
        "transform": {
          "lens_targets": ["zeitgeist_module", "modules/imperium"],
          "meta_pattern": "extract_from(pattern_type)",
          "key_dimensions": "extract_from(phases)"
        }
      },
      "applicable_to": [
        "modules/mythos_und_verwaltung/patterns/MUV-PAT-*"
      ],
      "metadata": {
        "created": "2026-01-22",
        "status": "active",
        "version": "0.1.0"
      }
    },
    {
      "id": "BOL-RULE-003",
      "name": "Candidate to Individual",
      "description": "Transformationsregel für Kandidaten-JSONs zu Individuum-Format für Human Cartography",
      "source_schema": "shared/candidates/items/*",
      "target_schema": "data/schema/node_schema.json",
      "transformation": {
        "type": "enrichment",
        "mappings": {
          "individual_id": "id",
          "name": "name",
          "description": "description"
        },
        "enrichments": {
          "perspective": {
            "potential_position": "calculate_from(candidate_attributes)",
            "world_edges": "extract_from(cross_references)",
            "resonance_patterns": "analyze_from(narratives)"
          }
        },
        "required_fields": [
          "name",
          "description"
        ]
      },
      "applicable_to": [
        "shared/candidates/items/CAND-*"
      ],
      "metadata": {
        "created": "2026-01-22",
        "status": "active",
        "version": "0.1.0"
      }
    },
    {
      "id": "BOL-RULE-004",
      "name": "Crosslink Normalization",
      "description": "Normalisierungsregel für verschiedene Crosslink-Implementierungen",
      "source_schema": ["shared/crosslinks/*", "modules/imperium/crosslinks/*"],
      "target_schema": "data/schema/edge_schema.json",
      "transformation": {
        "type": "normalization",
        "normalization": {
          "edge_types": {
            "supports": "positive",
            "contradicts": "negative",
            "informs": "neutral",
            "analogous_to": "analogous",
            "inspired_by": "derivative"
          },
          "strength_default": 0.5,
          "confidence_required": true
        }
      },
      "applicable_to": [
        "shared/crosslinks/*",
        "modules/imperium/crosslinks/*"
      ],
      "metadata": {
        "created": "2026-01-22",
        "status": "active",
        "version": "0.1.0"
      }
    },
    {
      "id": "BOL-RULE-005",
      "name": "Zeitgeist Module to Pattern Mapping",
      "description": "Transformationsregel zum Mappen von Zeitgeist-Modulen auf Meta-Patterns",
      "source_schema": "zeitgeist_module/ZG-*/module_meta.json",
      "target_schema": "build_on_old/patterns",
      "transformation": {
        "type": "pattern_recognition",
        "mapping": {
          "ZG-001-memory-loss": "Memory Resonance",
          "ZG-002-order-powerlessness": "Zyklischer Aufstieg und Fall",
          "ZG-003-ritual-relief": "Ritual Core Loop",
          "ZG-004-transition-initiation": "Threshold Crossing",
          "ZG-005-mythos-administration": "Civilization Resonance Loop"
        }
      },
      "applicable_to": [
        "zeitgeist_module/*/module_meta.json"
      ],
      "metadata": {
        "created": "2026-01-22",
        "status": "active",
        "version": "0.1.0"
      }
    }
  ],
  "metadata": {
    "module": "build_on_old",
    "file": "rules",
    "version": "0.1.0",
    "created": "2026-01-22",
    "description": "Transformationsregeln für Migration und Analyse zwischen verschiedenen Schemata",
    "schema_version": "1.0.0"
  }
}
