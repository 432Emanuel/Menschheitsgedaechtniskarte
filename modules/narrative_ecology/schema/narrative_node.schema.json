{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://menschheitsgedaechtniskarte.de/modules/narrative_ecology/schema/narrative_node.schema.json",
  "title": "Narrative Node Schema",
  "description": "Schema für Narrative Knoten in der Narrativökologie",
  "type": "object",
  "required": ["type", "id", "label", "description", "mode", "tags"],
  "properties": {
    "type": {
      "type": "string",
      "description": "Typ des Knotens",
      "enum": ["narrative_node", "archetype", "mechanism", "cycle", "experiment", "trigger"]
    },
    "id": {
      "type": "string",
      "description": "Eindeutige Kennung des Knotens",
      "pattern": "^NE-[0-9]{3}-[A-Z0-9-]+$"
    },
    "label": {
      "type": "string",
      "description": "Anzeigename des Knotens"
    },
    "description": {
      "type": "string",
      "description": "Beschreibung des Knotens"
    },
    "mode": {
      "type": "string",
      "description": "Modus des Knotens",
      "enum": ["analysis", "experiential", "both"]
    },
    "tags": {
      "type": "array",
      "description": "Kategorisierungs-Tags",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "layer": {
      "type": "string",
      "description": "Optionale Zuordnung zu einer Ebene",
      "enum": ["individual", "social", "cultural", "institutional", "systemic"]
    },
    "metadata": {
      "type": "object",
      "description": "Optionale Metadaten",
      "properties": {
        "created": {
          "type": "string",
          "format": "date"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "active", "deprecated"]
        },
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        }
      }
    }
  }
}