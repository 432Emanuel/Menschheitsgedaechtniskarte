{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://menschheitsgedaechtniskarte.de/modules/narrative_ecology/schema/narrative_edge.schema.json",
  "title": "Narrative Edge Schema",
  "description": "Schema für Narrative Kanten in der Narrativökologie",
  "type": "object",
  "required": ["type", "from", "to", "relation_type"],
  "properties": {
    "type": {
      "type": "string",
      "description": "Typ der Kante",
      "enum": ["narrative_edge", "feedback_loop", "mechanism_link", "influence", "conflict", "hybridization"]
    },
    "from": {
      "type": "string",
      "description": "ID des Quellknotens",
      "pattern": "^NE-[0-9]{3}-[A-Z0-9-]+$"
    },
    "to": {
      "type": "string",
      "description": "ID des Zielknotens",
      "pattern": "^NE-[0-9]{3}-[A-Z0-9-]+$"
    },
    "relation_type": {
      "type": "string",
      "description": "Art der Beziehung",
      "enum": [
        "strengthens",
        "weakens",
        "competes",
        "hybridizes",
        "displaces",
        "revives",
        "triggers",
        "reflects",
        "influences",
        "creates"
      ]
    },
    "weight": {
      "type": "number",
      "description": "Optionale Gewichtung der Beziehung (0-1)",
      "minimum": 0,
      "maximum": 1
    },
    "notes": {
      "type": "string",
      "description": "Optionale Notizen zur Beziehung"
    },
    "metadata": {
      "type": "object",
      "description": "Optionale Metadaten",
      "properties": {
        "created": {
          "type": "string",
          "format": "date"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "active", "deprecated"]
        },
        "direction": {
          "type": "string",
          "enum": ["unidirectional", "bidirectional"]
        }
      }
    }
  }
}