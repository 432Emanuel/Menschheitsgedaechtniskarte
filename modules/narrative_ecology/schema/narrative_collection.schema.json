{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://menschheitsgedaechtniskarte.de/modules/narrative_ecology/schema/narrative_collection.schema.json",
  "title": "Narrative Collection Schema",
  "description": "Schema for collection-style narrative ecology documents.",
  "type": "object",
  "required": ["id", "type", "title"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Document identifier for narrative collection documents.",
      "pattern": "^NE-[0-9]{3}-[A-Za-z0-9_-]+$"
    },
    "type": {
      "type": "string",
      "description": "Collection document type.",
      "enum": ["narrative_data"]
    },
    "title": {
      "type": "string",
      "description": "Human-readable collection title."
    },
    "label": {
      "type": "string",
      "description": "Optional short display label."
    },
    "description": {
      "type": "string",
      "description": "Optional document description."
    },
    "mode": {
      "type": "string",
      "description": "Narrative ecology mode.",
      "enum": ["analysis", "experiential", "both"]
    },
    "tags": {
      "type": "array",
      "description": "Optional categorization tags.",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata.",
      "properties": {
        "created": {
          "type": "string",
          "format": "date"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "active", "deprecated"]
        },
        "version": {
          "type": "string",
          "description": "Semver with optional prerelease/build metadata.",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
        }
      }
    }
  }
}
